.site{
  display: flex;
  flex-direction: column;
  flex-grow: row wrap;
  font-size: 26rpx;
  border-top: 1rpx solid #E8E8E8;
  box-shadow: 2rpx -2rpx 5rpx #E8E8E8;
  border-left:none; 
  border-right:none; 
  
}
.lol .icon{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
}
.site-time{
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #E8E8E8;
  
}
.site-time text {
  margin-left: 12rpx; 
}

.lol{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 25rpx;
  font-size: 32rpx;
}
.lol text{
  display: flex;
  align-items: center;
  margin-left: 37rpx;
  width: 90%;
  height: 65rpx;
}

.site .line{
  background: #fff;
  width: 85rpx;
  height: 1rpx;
  position: relative;
  left: 0;
  top:84rpx;
}
.site-start{
  border-bottom:1rpx solid #E8E8E8;
}
.site-start .icon{
  background: #36BBA5;
}
.site-end{
  color: #FA8C48;
}
.site-end .icon{
  background: #FF8B51;
}
