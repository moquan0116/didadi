.page-head{
  display: flex;
  width: 100%;
  padding: 25rpx 15rpx;
  background: #fff;
  box-shadow: 0rpx 3rpx 1rpx #ccc;
  margin-bottom: 1rpx;
  align-items: center;
  z-index: 9999;
  flex-grow: 1;
}
.head-item{
  flex-direction: row;
  align-items: baseline;
  padding-top:15rpx;
  padding-bottom: 15rpx; 
}

.identity{
  width: 110rpx;
  margin:0rpx 25rpx; 
  padding-left:40rpx;
  padding-right:30rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: 1rpx solid #ccc;
  border-radius: 40rpx;
  box-shadow: 2rpx 2rpx 5rpx #ccc;
  letter-spacing: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8rpx 25rpx 8rpx 30rpx;
}



.identity image{
  margin-left: 15rpx;
  width: 20rpx;
  height: 50rpx;
}

.logo{
  letter-spacing: 6rpx;
  font-weight: 600;
}
.page-body{
  width: 100%;
}

map{
  width: 100%;
  height: 700rpx;
}

.panel{
  width: 100%;
  position: absolute;
  bottom: 5rpx;
}

